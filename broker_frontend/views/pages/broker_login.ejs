<div class="container top" style="text-align: center;margin-left: 470px;margin-top: 25px">
      <!-- Form Login into MBR Portal-->
    <div class="card grid col-lg-5">
        <div class="card-body">
            <div>
                <h4>Broker Login Portal</h4>
            </div>
            <form action="login_authenticate" method="POST">
                <!-- Login -->
                <!-- Login -->
                <% if (typeof loginError !='undefined'){%>
                <div>
                    <span id="loginError" class="error"> Either Username or Password is incorrect</span>
                </div>
                <%}%>
                <% if (typeof signupSuccess !='undefined'){%>
                <div>
                    <span id="signupSuccess" class="success"> Your account is successfully created, Please Login</span>
                </div>
                <%}%>
                <div class="input-group mb-3">
                    <input id="name" name="name" type="text" class="form-control" placeholder="Name"
                        required>
                </div>
                <div class="input-group mb-3">
                    <input id="password" name="password" type="password" class="form-control" placeholder="Enter password"
                        required>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary mb-3"> Login </button>

                </div>
               
            </form>

            <a class="btn btn-primary" href="customer" role="button">Signup</a>

        </div>
    </div>
</div>